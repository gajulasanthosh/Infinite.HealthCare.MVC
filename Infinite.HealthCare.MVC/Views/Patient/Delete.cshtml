@model PatientVM
@{
    ViewData["Title"] = "Delete";
}

<style>
    body{
        background-color:lightblue;
    }
</style>
<body>
    <div class="container offset-4 pt-5">
        <h1>Delete Patient</h1>

        <div class="row">
            <div class="col-md-5">
                <div asp-validation-summary="All" class="text-danger"></div>

                <ul class="list-group">
                    <li class="list-group-item"><b>PatientName: </b>@Model.FullName</li>
                    <li class="list-group-item"><b>PhoneNo: </b>@Model.MobileNo</li>
                    <li class="list-group-item"><b>EmailId: </b>@Model.EmailId</li>
                    <li class="list-group-item"><b>Address: </b>@Model.Address</li>
                    <li class="list-group-item"><b>City: </b>@Model.City</li>
                    <li class="list-group-item"><b>State: </b>@Model.State</li>

                </ul>
                <div>
                    Are you sure do you want to delete this Patient?
                </div>
                <div>
                    <form asp-controller="Patient" asp-action="Delete" method="post">
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a asp-controller="Patient" asp-action="Index" Back to List></a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
