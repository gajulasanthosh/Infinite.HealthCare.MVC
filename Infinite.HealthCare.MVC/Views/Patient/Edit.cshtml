@model PatientVM
@{
    ViewData["Title"] = "Edit";
}

<body>
    <div class="container offset-4 pt-5">
        <h1>Edit Customer</h1>

        <form asp-controller="Patient" asp-action="Edit" method="post">
            <div class="row">
                <div class="col-md-4">
                    <div asp-validation-summary="All" class="text-danger"></div>

                    
                    <input type="hidden" asp-for="FullName" />
                    <input type="hidden" asp-for="Gender" />
                    <input type="hidden" asp-for="EmailId" />
                    <input type="hidden" asp-for="Password" />
                    <div class="mb-2">
                        <label asp-for="Age" class="form-label"></label>
                        <input type="text" asp-for="Age" class="form-control" />
                        <span asp-validation-for="Age"></span>
                    </div>

                    <div class="mb-2">
                        <label asp-for="Address" class="form-label"></label>
                        <input type="text" asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address"></span>
                    </div>
                    <div class="mb-2">
                        <label asp-for="City" class="form-label"></label>
                        <input type="text" asp-for="City" class="form-control" />
                        <span asp-validation-for="City"></span>
                    </div>
                    <div class="mb-2">
                        <label asp-for="State" class="form-label"></label>
                        <input type="text" asp-for="State" class="form-control" />
                        <span asp-validation-for="State"></span>
                    </div>
                    <div class="mb-2">
                        <label asp-for="PinCode" class="form-label"></label>
                        <input type="text" asp-for="PinCode" class="form-control" />
                        <span asp-validation-for="PinCode"></span>
                    </div>
                    <div class="mb-2">
                        <label asp-for="MobileNo" class="form-label"></label>
                        <input type="text" asp-for="MobileNo" class="form-control" />
                        <span asp-validation-for="MobileNo"></span>
                    </div>
                    <div class="mt-2" d-grid>
                        <input type="submit" class="btn btn-primary" value="Update Patient" />
                    </div>
                </div>
            </div>

        </form>
    </div>
</body>


