@model DoctorVM
@{
    ViewData["Title"] = "Delete";
}

<body>
    <div class="container offset-4 pt-5">
        <h1>Delete Doctor</h1>

        <div class="row">
            <div class="col-md-5">
                <div asp-validation-summary="All" class="text-danger"></div>

                <ul class="list-group">
                    <li class="list-group-item"><b>PatientName: </b>@Model.DoctorName</li>
                    <li class="list-group-item"><b>Qualification: </b>@Model.Qualification</li>
                    <li class="list-group-item"><b>Specialization: </b>@Model.Specilization</li>
                    <li class="list-group-item"><b>EmailId: </b>@Model.EmailId</li>
                    <li class="list-group-item"><b>Address: </b>@Model.Address</li>
                    <li class="list-group-item"><b>City: </b>@Model.City</li>
                    <li class="list-group-item"><b>State: </b>@Model.State</li>
                    <li class="list-group-item"><b>PhoneNo: </b>@Model.PhoneNo</li>

                </ul>
                <div>
                    Are you sure do you want to delete this Doctor?
                </div>
                <div>
                    <form asp-controller="Doctor" asp-action="Delete" method="post">
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a asp-controller="Doctor" asp-action="Index" Back to List></a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>

